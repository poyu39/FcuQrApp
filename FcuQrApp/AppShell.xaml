<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FcuQrApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FcuQrApp.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="FcuQrApp">
    <ShellContent Title="主頁"
                  ContentTemplate="{DataTemplate pages:MainPage}"
                  Route="MainPage" />
    <ShellContent Title="設定"
                  ContentTemplate="{DataTemplate pages:SettingPage}"
                  Route="SettingPage" />
    <ShellContent Title="掃描"
                  ContentTemplate="{DataTemplate pages:QrScannerPage}"
                  Route="QrScannerPage" />
    <ShellContent Title="打卡"
                  ContentTemplate="{DataTemplate pages:ClassClockInPage}"
                  Route="ClassClockInPage" />
</Shell>
